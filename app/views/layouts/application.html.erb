<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
  </head>

  <body class="p-2">
    <% if flash[:notice] %>
      <div class="notification is-primary global-notification">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="notification is-danger global-notification">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>
    <nav class="navbar is-info">
      <div class="fw-bolder fs-5">
        <%= link_to "Poster", root_path %>
      </div>

      <div id="navbarExample" class="navbar-menu">
        <div class="navbar-end">
          <div class="field is-grouped d-flex">
            <p class="control px-2">
              <%= link_to 'New Post', new_post_path, class: "button is-info is-inverted" %>
            </p>
            <% if user_signed_in? %> 
              <p class="control px-2"> <%= link_to current_user.username, edit_user_registration_path, class: "button is-info" %></p> 
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete %> 
            <% else %> 
              <p class="control px-2"> <%= link_to 'Sign In', new_user_session_path, class: "button is-info" %></p> 
              <p class="control px-2"> <%= link_to 'Sign Up', new_user_registration_path, class: "button is-info" %></p> 
            <% end %>
          </div>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
